<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/hinh50dp"
        android:layout_height="@dimen/hinh50dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvNameSchool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv"
        android:hint="Ten truong"
        android:textColor="@color/mauchu"
        android:textSize="@dimen/kichthuocchu20" />

    <TextView
        android:id="@+id/tvDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameSchool"
        android:layout_toRightOf="@+id/iv"
        android:hint="dia chi truong" />


</RelativeLayout>